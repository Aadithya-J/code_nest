# Auth Service Environment Variables

# Port on which the service listens
auth service:
AUTH_SERVICE_PORT=8081

# Postgres connection string (must include user, password, host, port, database, sslmode)
AUTH_DB_CONN=postgres://user:password@localhost:5432/authdb?sslmode=disable

# JWT signing secret
AUTH_JWT_SECRET=your_jwt_signing_secret

# Google OAuth2 credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Redirect URL for Google OAuth callback (optional)
# If unset, defaults to http://localhost:${AUTH_SERVICE_PORT}/auth/google/callback
#AUTH_GOOGLE_REDIRECT_URL=http://localhost:8081/auth/google/callback
